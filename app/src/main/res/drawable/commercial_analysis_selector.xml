<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/red_cus"></solid>
            <corners android:radius="21dp"></corners>
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="#FF5F5F" android:dashWidth="2dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="#cccccc"></solid>
            <corners android:radius="21dp"></corners>
            <stroke android:width="1dp" android:color="#cccccc" android:dashWidth="2dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/red_cus"></solid>
            <corners android:radius="21dp"></corners>
            <stroke android:width="1dp" android:color="#FF5F5F" android:dashWidth="2dp" />
        </shape>
    </item>
</selector>