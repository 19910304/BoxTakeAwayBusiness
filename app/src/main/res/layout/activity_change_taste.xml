        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_12dp"
        android:paddingTop="@dimen/dimen_12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
