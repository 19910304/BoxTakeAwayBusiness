<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ck_caipin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rebates_selector"
            android:button="@null"
            android:checked="true" />

        <ImageView
            android:id="@+id/img_caipin"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="11dp"
            android:background="#999999"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_caipin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="酸菜肥牛老砂锅"
                android:textColor="@color/black_text"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_caipin_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:text="x1"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/ll_change_caipin_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/igb_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/minusred" />

                    <TextView
                        android:id="@+id/tv_caipin_number1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="1"
                        android:textColor="@color/gray_text"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/igb_jia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/addred" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="￥"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_12sp" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_18dp"
            android:text="10.0"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_18sp" />
    </LinearLayout>
</LinearLayout>