<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header_save"></include>

    <EditText
        android:id="@+id/et_shop_announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/white_et_selector"
        android:gravity="right|left"
        android:hint="请输入公告信息"
        android:lines="6"
        android:padding="@dimen/dimen_12dp" />


</LinearLayout>