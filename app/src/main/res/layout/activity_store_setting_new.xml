<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_me_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17sp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:layout_weight="1"
                    android:text="店铺头像"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_15sp" />


                <ImageView
                    android:id="@+id/btn_me_thumbnail"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@mipmap/circleimag" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:text="营业状态"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:id="@+id/tv_shop_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="end"
                    android:text=""
                    android:textColor="#FA6161"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shop_announcement"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="店铺公告"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:text=""
                    android:textColor="#FA6161"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>
            <!--店铺简介-->
            <LinearLayout
                android:id="@+id/ll_shop_introduce"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="店铺简介"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:text=""
                    android:textColor="#FA6161"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shop_photo"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="店铺照片"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:text=""
                    android:textColor="#FA6161"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:text="起送价"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <EditText
                    android:id="@+id/et_send_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:background="@drawable/white_et_selector"
                    android:gravity="end|center"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:paddingRight="30dp"
                    android:textColor="#FA6161"
                    android:textSize="@dimen/font_size_14sp" />

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginRight="@dimen/dimen_14dp"-->
                <!--android:background="@mipmap/qqwww" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_change_phone"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="修改餐厅电话"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:id="@+id/tv_shop_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:gravity="end"
                    android:text="1225461235"
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="10dp"

                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_store_address"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:text="餐厅地址"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:id="@+id/tv_shop_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_et_selector"
                    android:gravity="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="10dp"

                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yingye_time"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="营业时间"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:id="@+id/tv_business_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:text="9:00-18:00"
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>
            <!--营业资质-->
            <LinearLayout
                android:id="@+id/ll_yingye_qualifications"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="营业资质"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="10dp"

                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shipping_information"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="配送信息"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_agreement"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="已签署的协议"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="10dp"

                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_management_standard"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="管理规范"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>