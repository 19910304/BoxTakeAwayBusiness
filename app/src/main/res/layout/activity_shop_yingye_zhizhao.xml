<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:background="@mipmap/recharge1" />

                <TextView
                    android:id="@+id/tv_certificate_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="37dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="37dp"
                    android:text=""
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginTop="18dp"
                        android:text="证书名称"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="*"
                        android:textColor="#FA6161" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@drawable/feedback_selector"
                    android:hint="请输入证书名称"
                    android:paddingLeft="@dimen/dimen_6dp"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginTop="18dp"
                        android:text="法定代表人"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="*"
                        android:textColor="#FA6161" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_legal_person"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@drawable/feedback_selector"
                    android:hint="请输入法人姓名"
                    android:paddingLeft="@dimen/dimen_6dp"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginTop="18dp"
                        android:text="许可证编号"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="*"
                        android:textColor="#FA6161" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_register_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@drawable/feedback_selector"
                    android:hint="输入许可证"
                    android:paddingLeft="@dimen/dimen_6dp"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginTop="18dp"
                        android:text="经营场所"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="*"
                        android:textColor="#FA6161" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_certificates_place"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@drawable/feedback_selector"
                    android:hint="输入执照所在地"
                    android:paddingLeft="@dimen/dimen_6dp"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginTop="18dp"
                        android:text="营业执照有效期"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="*"
                        android:textColor="#FA6161" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/ck_long_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/sus_three_bus_indate"
                        android:drawablePadding="@dimen/dimen_8dp"
                        android:text="长期有效"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/font_size_15sp" />

                    <CheckBox
                        android:id="@+id/ck_guding_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginRight="23dp"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/sus_three_bus_indate"
                        android:drawablePadding="@dimen/dimen_8dp"
                        android:text="固定有效期"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/font_size_15sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_validity_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="22dp"
                    android:background="#F7F7F7"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_validity_term"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="13dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/dimen_12dp"
                        android:text="2019-12-12" />


                    <ImageView
                        android:id="@+id/img_card_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:background="@mipmap/validity_term" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="营业执照图片(点击图片重新上传)*" />

                <RelativeLayout
                    android:layout_width="335dp"
                    android:layout_height="187dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="7dp"
                    android:background="#F7F7F7">

                    <ImageView
                        android:id="@+id/img_certificates_img"
                        android:layout_width="335dp"
                        android:layout_height="187dp"
                        android:background="#F7F7F7" />

                    <TextView
                        android:id="@+id/tv_certificates_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:textColor="#E6E6E6"
                        android:textSize="96sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_18sp"
                android:background="@color/white"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_yingye_zhizhao"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36dp"
                    android:layout_marginBottom="@dimen/dimen_6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@drawable/bt_selector"
                    android:text="保存并提交审核"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_16sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>