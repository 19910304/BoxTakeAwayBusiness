<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:background="@drawable/feedback_selector"
            android:gravity="left|top"
            android:hint="输入意见或者反馈内容"
            android:inputType="textMultiLine"
            android:lines="7"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#999999"
            android:textSize="@dimen/font_size_15sp" />

        <!--<ImageView-->
        <!--android:id="@+id/bt_add_picture"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginBottom="@dimen/dimen_15dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="@dimen/dimen_15dp"-->
        <!--android:background="@drawable/feedback_selector"-->
        <!--android:src="@mipmap/add_feed_picture"/>-->
        <ImageView
            android:id="@+id/bt_add_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:background="@mipmap/feedback" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="联系方式:"
            android:textSize="@dimen/font_size_14sp" />

        <EditText
            android:id="@+id/et_feed_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_et_selector"
            android:hint="请留下您的手机号码。"
            android:inputType="phone|number"
            android:textColorHint="#999999"
            android:textSize="@dimen/font_size_14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="提交意见或反馈后，我们将在3个工作日联系您"
        android:textColor="#666666"

        android:textSize="13sp" />

    <Button
        android:id="@+id/bt_feed_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_margin="10dp"
        android:background="@drawable/bt_selector"
        android:text="提交"
        android:textColor="@color/white"

        android:textSize="@dimen/font_size_16sp" />
</LinearLayout>