<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <LinearLayout
        android:id="@+id/ll_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_password_old"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/login_et_selector"
            android:hint="请输入旧密码"
            android:paddingLeft="8dp"
            android:textColor="@color/gray_light"
            android:textColorHint="#999999"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password_new"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:background="@drawable/login_et_selector"
            android:hint="请输入新密码"
            android:paddingLeft="8dp"
            android:textColor="@color/gray_light"
            android:textColorHint="#999999"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password_sec"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:background="@drawable/login_et_selector"
            android:hint="再次输入新密码"
            android:paddingLeft="8dp"
            android:textColor="@color/gray_light"
            android:textColorHint="#999999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_reset_confirm"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/dimen_48dp"
            android:background="@drawable/bt_selector"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>