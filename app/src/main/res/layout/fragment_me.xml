<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <!--<com.canyinghao.canrefresh.CanRefreshLayout-->
    <!--android:id="@+id/crl_information"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <!--<com.canyinghao.canrefresh.yalantis.YalantisPhoenixRefreshView-->
    <!--android:id="@id/can_refresh_header"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->

    <!--<com.canyinghao.canrefresh.classic.RotateRefreshView-->
    <!--android:id="@id/can_refresh_footer"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="159.2dp"
                android:background="@mipmap/me_main"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <ImageButton
                        android:id="@+id/switcher_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/reflash" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <!--二维码-->
                    <ImageButton
                        android:id="@+id/img_erweima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/qrcode"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_me_thumbnail"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/dimen_8dp"
                            android:background="@mipmap/circleimag" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_16sp" />

                        <TextView
                            android:id="@+id/tv_sogo_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_48dp"
                        android:gravity="center_horizontal"
                        android:text="LiShuTing"
                        android:clickable="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_14sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_operating_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_14dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text="未营业"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_14sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_store_setting"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@mipmap/storesetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:text="门店设置"
                        android:textColor="#666666"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0.5dp"
                    android:layout_height="100dp">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_order_setting"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@mipmap/ordersetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:text="订单设置"
                        android:textColor="#666666"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0.5dp"
                    android:layout_height="100dp">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dayin_setting"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@mipmap/printsetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:text="打印设置"
                        android:textColor="#666666"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0.5dp"
                    android:layout_height="100dp">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_message_setting"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_16dp"

                        android:background="@mipmap/messagesetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:text="消息设置"
                        android:textColor="#666666"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="营业状态"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_36dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.xinzuokeji.boxtakeawaybusiness.util.CustomDigitalClock
                        android:id="@+id/remainTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:01"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_operating_state_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:text=""
                    android:textColor="#FA6161"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_peisong_style"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="平台配送"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#F0F0F0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_merchant_service_enter"
                android:layout_width="match_parent"
                android:layout_height="51dp"

                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="商家服务中心"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#F0F0F0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_feedback"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="产品意见反馈"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#F0F0F0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_store_apply"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="店铺申请"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#F0F0F0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_me_zh"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:text="我的账号"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_exit_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="退出"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--</com.canyinghao.canrefresh.CanRefreshLayout>-->
</LinearLayout>