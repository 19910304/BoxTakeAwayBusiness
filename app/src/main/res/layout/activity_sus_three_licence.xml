<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="18dp"
                    android:text="许可证名称"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <EditText
                    android:id="@+id/et_certificates_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/white_et_selector"
                    android:hint="输入许可证名称"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="18dp"
                    android:text="法人代表姓名"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <EditText
                    android:id="@+id/et_legal_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/white_et_selector"
                    android:hint="法人代表姓名"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="18dp"
                    android:text="许可证注册号"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <EditText
                    android:id="@+id/et_register_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/white_et_selector"
                    android:hint="许可证注册号"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="18dp"
                    android:text="许可证所在地"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <EditText
                    android:id="@+id/et_certificates_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/white_et_selector"
                    android:hint="输入所在地"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="18dp"
                    android:text="许可证有效期"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <CheckBox
                    android:id="@+id/ck_long_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@null"
                    android:drawableLeft="@drawable/sus_three_bus_indate"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:text="长期有效"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <CheckBox
                    android:id="@+id/ck_fixation_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@null"
                    android:drawableLeft="@drawable/sus_three_bus_indate"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:text="固定有效期"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_time_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="22dp"
                    android:background="#F7F7F7"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_validity_term"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="13dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/dimen_12dp"
                        android:text="2019-12-12" />

                    <LinearLayout
                        android:id="@+id/ll_certificates_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="13dp"
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:background="@mipmap/validity_term" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <!--<TextView-->
            <!--android:id="@+id/tv_validity_term"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="18dp"-->
            <!--android:layout_marginRight="@dimen/dimen_14dp"-->
            <!--android:layout_marginTop="18dp"-->
            <!--android:background="@drawable/white_et_selector"-->
            <!--android:text="请选择有效期"-->
            <!--android:textColor="#999999"-->
            <!--android:textColorHint="#999999"-->
            <!--android:textSize="@dimen/font_size_14sp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="可用有效特许证件代替许可证" />

                <RelativeLayout
                    android:layout_width="335dp"
                    android:layout_height="187dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="17dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="#F7F7F7">

                    <ImageView
                        android:id="@+id/iv_sus_licence"
                        android:layout_width="335dp"
                        android:layout_height="187dp" />

                    <TextView
                        android:id="@+id/tv_sus_licence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:textColor="#E6E6E6"
                        android:textSize="96sp" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bt_sure_save"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:background="@drawable/set_up_shop_selector"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>