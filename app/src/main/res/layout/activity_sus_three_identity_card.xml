<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">
    <!--身份证-->
    <include layout="@layout/action_header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="18dp"
                    android:text="姓名"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/white_et_selector"
                    android:hint="输入姓名"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="20dp"

                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="18dp"
                    android:text="法人身份证号"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <EditText
                    android:id="@+id/et_id_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/white_et_selector"
                    android:hint="输入身份证号"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/font_size_18sp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="@dimen/font_size_18sp"
                    android:text="请上传手持身份证照"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_15sp" />

                <RelativeLayout
                    android:layout_width="343dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/sus_three_id_card">

                    <ImageView
                        android:id="@+id/igb_card1"
                        android:layout_width="343dp"
                        android:layout_height="180dp"
                        android:background="@drawable/sus_three_id_card" />

                    <LinearLayout
                        android:id="@+id/ll_id_card1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/addnew"
                            android:textColor="#CCCCCC" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen_14dp"
                            android:text="上传手持身份证正面照"
                            android:textColor="#B3B3B3"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="343dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="31dp"
                    android:layout_marginTop="@dimen/dimen_14dp"
                    android:background="@drawable/sus_three_id_card">

                    <ImageView
                        android:id="@+id/igb_card2"
                        android:layout_width="343dp"
                        android:layout_height="180dp"
                        android:background="@drawable/sus_three_id_card" />

                    <LinearLayout
                        android:id="@+id/ll_id_card2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/addnew"
                            android:textColor="#CCCCCC" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen_14dp"
                            android:text="上传手持身份证反面照"
                            android:textColor="#B3B3B3"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/bt_sure_save"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_36dp"
                android:background="@drawable/set_up_shop_selector"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>