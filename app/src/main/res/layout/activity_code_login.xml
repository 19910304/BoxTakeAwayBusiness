<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/shouji" />

        <EditText
            android:id="@+id/et_account_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/register_et_selector"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textColor="@color/black_text"
            android:textColorHint="#ababab"
            android:textSize="@dimen/font_size_16sp" />


        <TextView
            android:id="@+id/bt_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:layout_marginTop="29dp"
            android:background="@null"
            android:clickable="true"
            android:text="获取验证码"
            android:textColor="#fa6161"
            android:textSize="@dimen/font_size_16sp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/dimen_36dp"
        android:layout_marginTop="9dp"
        android:background="#e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/message" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:layout_marginTop="29dp"
            android:layout_weight="1"
            android:background="@drawable/register_et_selector"
            android:hint="请输入短信验证码"
            android:inputType="phone"
            android:textColor="@color/black_text"
            android:textColorHint="#ababab"
            android:textSize="@dimen/font_size_16sp" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/delete_new"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/dimen_36dp"
        android:layout_marginTop="9dp"
        android:background="#e1e1e1" />

    <Button
        android:id="@+id/bt_login_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/dimen_48dp"
        android:background="@drawable/set_up_shop_selector"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16sp" />

    <TextView
        android:id="@+id/tv_psw_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:clickable="true"
        android:text="使用密码登录"
        android:textColor="#999999"
        android:textSize="14sp" />
</LinearLayout>