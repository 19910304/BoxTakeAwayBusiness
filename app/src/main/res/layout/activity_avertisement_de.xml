<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="选择日期"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lanya_dayin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="起始时间"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:text="2018-04-01"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginBottom="16dp"-->
                <!--android:layout_marginRight="11dp"-->
                <!--android:layout_marginTop="16dp"-->
                <!--android:background="@mipmap/qqwww" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:layout_marginLeft="10dp"

                    android:background="#EBEBEB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jiezhi_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="截止时间"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_15sp" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="16dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginTop="16dp"-->
                <!--android:text="2018-04-01"-->
                <!--android:textColor="#333333"-->
                <!--android:textSize="13sp" />-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="16dp"
                    android:background="@mipmap/qqwww" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:text="上传图片(建议尺寸：750px·300px)"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/lv_add_picture"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="@dimen/dimen_14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/dimen_14dp"
                    android:background="@color/background_new" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#CCCCCC"
                        android:textSize="45sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上传"
                        android:textColor="#CCCCCC"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/bt_pay_ad"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@drawable/bt_selector"
                android:text="售价：￥155"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="首页轮播banner是指，用户端首页，顶部搜索栏下，幻灯片播放的图片，该位置是用户点进APP内看见的第一张图片，又称头图，具有极为巨大的宣传作用。等等，用户点击图片直接进入店铺。现售价：￥155/天" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
