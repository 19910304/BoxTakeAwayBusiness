<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_14dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:text="2018年3月"
        android:textColor="@color/black_text"
        android:textSize="17sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_order_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_weight="1"
            android:text="2018.03.08"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_14sp" />

        <TextView
            android:id="@+id/tv_order_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="￥26.00"
            android:textColor="#ff333333" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:background="@mipmap/qqwww" />
    </LinearLayout>
    <!--<ListView-->
    <!--android:id="@+id/lv_order_history"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->
</LinearLayout>