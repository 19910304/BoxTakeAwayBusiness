<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff9f9"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_today_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_weight="1"
                    android:text="2018.07.12"
                    android:textColor="#2a2a2a"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:id="@+id/tv_today_all_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="￥36.00"
                    android:textColor="#2a2a2a"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_out_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="外卖订单"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/font_size_16sp" />


                <TextView
                    android:id="@+id/tv_all_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="共2笔"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_waima_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="￥36.00"
                    android:textColor="#FE6162"
                    android:textSize="@dimen/font_size_14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_order_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:dividerHeight="@dimen/dimen_0.5dp">

            </ListView>

            <LinearLayout
                android:id="@+id/ll_refund_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="退款订单"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/font_size_16sp" />

                <TextView
                    android:id="@+id/tv_all_number_refund"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="共2笔"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_rebates_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="￥36.00"
                    android:textColor="#FE6162"
                    android:textSize="@dimen/font_size_14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dp"
                    android:background="#EBEBEB" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_refund_order_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:dividerHeight="@dimen/dimen_0.5dp">

            </ListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>