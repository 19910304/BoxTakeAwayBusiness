<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/wode" />

        <EditText
            android:id="@+id/et_account_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/register_et_selector"
            android:hint="请输入账号"
            android:inputType="phone"
            android:textColor="@color/black_text"
            android:textColorHint="#ababab"
            android:textSize="@dimen/font_size_16sp" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:background="@mipmap/delete_new"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingRight="@dimen/dimen_24dp"
            android:visibility="gone">
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/dimen_36dp"
        android:layout_marginTop="9dp"
        android:background="#e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/mima" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:layout_marginTop="29dp"
            android:layout_weight="1"
            android:background="@drawable/register_et_selector"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/black_text"
            android:textColorHint="#ababab"
            android:textSize="@dimen/font_size_16sp" />

        <Button
            android:id="@+id/bt_delete1"
            android:layout_width="12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/delete_new"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/dimen_36dp"
        android:layout_marginTop="9dp"
        android:background="#e1e1e1" />

    <Button
        android:id="@+id/bt_login_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/dimen_48dp"
        android:background="@drawable/set_up_shop_selector"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <!--忘记密码-->

        <TextView
            android:id="@+id/tv_code_login_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:clickable="true"
            android:text="手机验证登录"
            android:textColor="#fa6161"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <!--验证码登录-->

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_12dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:clickable="true"
            android:text="忘记密码?"
            android:textColor="#999999"
            android:textSize="14sp" />
        <!--，使用手机验证码快速登录-->
    </LinearLayout>

</LinearLayout>