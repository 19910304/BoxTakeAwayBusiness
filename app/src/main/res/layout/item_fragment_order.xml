<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="@dimen/dimen_14dp"
    android:background="@drawable/order_managment_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:background="@mipmap/order_tips"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15sp" />

        <TextView
            android:id="@+id/tv_pre_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:text="立即送达(建议19:45前送达)"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_cancel_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:text="用户已取消"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_14sp" />
    </LinearLayout>
    <!--骑手信息-->
    <LinearLayout
        android:id="@+id/ll_nick_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/cimg_nick_icon"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/rider_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tv_nick_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_nick_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_14dp"
            android:layout_marginTop="17dp"
            android:background="#4C4C4C"
            android:paddingLeft="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_12dp"
            android:text=""
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王女士"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_18sp" />

                <TextView
                    android:id="@+id/tv_client_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:text="15520640323"
                    android:textColor="#00A7FE"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_client_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/font_size_18sp"
                    android:text="石小路160号16楼（1.1km）" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:background="@mipmap/location" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="#F0F0F0" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_refund_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_12dp">

        <TextView
            android:id="@+id/tv_refund_infor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text=""
            android:textColor="@color/black_text" />

        <TextView
            android:id="@+id/tv_greed_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/goods"
            android:drawablePadding="@dimen/dimen_8dp"

            android:text="商品"
            android:textColor="@color/black_text"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/ll_good_is_unfold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_good_is_unfold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="展开"
                android:textColor="#00A7FE"
                android:textSize="@dimen/font_size_14sp" />

            <ImageView
                android:id="@+id/img_is_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:background="@mipmap/expand" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_good"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_marginTop="10dp"
        android:background="#FAFAFA"
        android:divider="#FAFAFA"
        android:dividerHeight="@dimen/dimen_0.5dp"
        android:scrollbars="none"
        android:visibility="gone" />
    <!--aa-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_14dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐盒费"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_14sp"
                android:text="配送费"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_14sp"
                android:text="平台服务费"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_18sp"
                android:text="总金额"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_18sp"
                android:text="预计收入"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_size_15sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="1dp"
            android:background="@mipmap/pay_tip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_14dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_canhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:id="@+id/tv_peisong_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_14sp"
                android:text="0.0"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:id="@+id/tv_service_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_14sp"
                android:text="0.0"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:id="@+id/tv_all_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_18sp"
                android:text="0.0"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:id="@+id/tv_projected_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_18sp"
                android:text="￥23"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size_15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="#EBEBEB" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下单"
            android:textColor="#6E6E6E"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:text="03-15 15:25"
            android:textColor="#6E6E6E" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="订单号(长按复制)"
            android:textColor="#6E6E6E"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_order_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:editable="false"
            android:gravity="right|center_vertical"
            android:lines="1"
            android:paddingRight="3dp"
            android:text="1233333333"
            android:textColor="#6E6E6E"
            android:textCursorDrawable="@null"
            android:textIsSelectable="true"
            android:textSize="13sp" />
    </LinearLayout>
    <!--备注-->
    <LinearLayout
        android:id="@+id/ll_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_14dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="10dp"
            android:text="备注"
            android:textColor="#6E6E6E"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_14dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="不要香菜"
            android:textColor="@color/black_text"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zixun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:drawableLeft="@mipmap/call"
            android:drawablePadding="@dimen/dimen_6dp"
            android:text="客服咨询" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:drawableLeft="@mipmap/dayin"
            android:drawablePadding="@dimen/dimen_6dp"
            android:text="打印订单" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_contact_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <Button
            android:id="@+id/bt_full_refund"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@drawable/cancel_order_selector"
            android:text="联系用户"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/bt_rebates"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/order_rebates_selector"
            android:text="申请退款"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/bt_call_rider"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@drawable/cancel_order_selector"
            android:text="联系骑手"
            android:textColor="@color/red"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_refund_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAF2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_12dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退款"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_size_18sp" />

            <LinearLayout
                android:id="@+id/ll_refund_is_unfold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_6dp">

                <TextView
                    android:id="@+id/tv_refund_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:text="收起"
                    android:textColor="@color/blue" />

                <ImageView
                    android:id="@+id/img_refund_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@mipmap/expand" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_refund_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_size_30sp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_refund_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_refund_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:text="2018-8-16"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_size_30sp"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/font_size_30sp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cancel_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家取消订单"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/font_size_15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_cancel_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_14dp"
                        android:text="2018-8-16"
                        android:textColor="#666666"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_refund_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="理由：没货"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>