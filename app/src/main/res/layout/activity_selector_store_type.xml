<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_new"
    android:orientation="vertical">

    <include layout="@layout/action_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/font_size_18sp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/font_size_18sp"
            android:text="店铺类型"
            android:textColor="@color/black_text" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_store_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/font_size_18sp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/font_size_18sp"
            android:text="经营类型"
            android:textColor="#FF5969" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:layout_marginLeft="10dp"

                android:background="#EBEBEB" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_manage_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:divider="@color/white"
            android:dividerHeight="0dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_sure_store_type"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/set_up_shop_selector"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_15sp"
        android:visibility="visible" />
</LinearLayout>